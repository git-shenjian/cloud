<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.sj.dao.PaymentDao">
    <insert id="add" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment (serial) values (#{serial});
    </insert>


    <resultMap id="base" type="cn.sj.entities.Payment">
        <id column="id" property="id" />
        <id column="serial" property="serial" />
    </resultMap>
    <select id="getPaymentById" parameterType="Long" resultMap="base">
        select * from payment where id=#{id}
    </select>


</mapper>
